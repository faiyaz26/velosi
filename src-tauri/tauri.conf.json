{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Velosi",
  "version": "0.1.0",
  "identifier": "com.velosi.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1000,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 800,
        "visible": true,
        "closable": true,
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
